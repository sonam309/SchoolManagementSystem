<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.schoolManagement.Ui.Fragment.Notification.NotificationsFragment">

    <EditText
        android:id="@+id/txt_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp250"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/rounded_corner_spinner_layout"
        android:hint="write something...."
        android:padding="@dimen/dp10" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_notification"
        android:layout_margin="@dimen/dp30"
        android:visibility="gone"
        android:background="@drawable/side_nav_bar"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18" />


</RelativeLayout>